<% if title %>
<li><b><%= title %></b></li>
<% end %>
<% for subject in subjects %>
<li class='second' id='<%= "subject#{subject.id}" %>'>
<div class='info'><%= subject.finishing_on %>. <%= t(:message_0, :scope => [:txt, :view, :shared, :_subjects, :rhtml]) %></div>
<%= subject.subject.label %>
</li>
<% if subject.finished? %>
<li class='third'>
<div class='info'><%= subject.finished_on.strftime("%d. %m. %Y") %> </div>
<%= "#{t(:message_1, :scope => [:txt, :view, :shared, :_subjects, :rhtml])} " %>
&nbsp; 
</li>
<% end %>
<% end %>

