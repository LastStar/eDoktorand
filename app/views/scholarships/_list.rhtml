<%= javascript_include_tag :defaults %>
<% @ids = [] %>
<% @scholarships.sort! {|x, y| x.payed_on <=> y.payed_on} %>
<ul>
<% for scholarship in @scholarships  %>
  <li>
    <%= small_info_div(scholarship.print_commission) %> 
  <% if scholarship.payed_on %>
    <%= long_info_helper(scholarship.payed_on.strftime("%d. %m. %Y")) %>
  <% end %>
    <b><%= scholarship.amount %></b>
  </li>
  <% @ids << scholarship.id %>
<% end %>
</ul>
