<%= form_remote_tag(:url => {:action => 'save_email', :id => @index}, :complete => evaluate_remote_response) %>
    <%= text_field 'email', 'name', 'size' => '30' %>
    <%= hidden_field 'email', 'contact_type_id' %>  
    <%= hidden_field 'index', 'id' %>
    <%= submit_tag _("commit") %>
<%= end_form_tag %>
