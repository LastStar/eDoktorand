<div id='form'>
<% form_remote_tag(:url => {:action => 'save_atestation_detail'}, 
                  :loading => "$('commit').value = '%s'" % t(:message_0, :scope => [:txt, :view, :study_plans, :_detail_form, :rhtml]),
                  :complete => evaluate_remote_response) do -%>	
  <label class='smaller' for="atestation_detail_detail">
    <%= t(:message_1, :scope => [:txt, :view, :study_plans, :_detail_form, :rhtml]) %>
  </label>
  <%= text_area 'atestation_detail', 'detail'  %><br/> 
  <%= hidden_field 'atestation_detail', 'id' %>
  <%= hidden_field 'atestation_detail', 'study_plan_id' %>
  <%= hidden_field 'atestation_detail', 'atestation_term' %>
  <%= submit_tag t(:message_2, :scope => [:txt, :view, :study_plans, :_detail_form, :rhtml]), :id => 'commit' %>
<% end %>
</div> 

