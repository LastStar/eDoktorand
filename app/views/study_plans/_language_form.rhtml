<% if flash[:error] %>
<div id='error'>
<ul class='nodecor'>
  <li>
<%= flash[:error] %>
  </li>
</ul>
</div>
<% end %>
<% form_remote_tag(:url => {:action => 'save_language'}) do -%>
<fieldset>
<legend><%= t(:message_0, :scope => [:view, :study_plans, :_language_form]) %></legend>
<ul>
  <% language_buff = LanguageSubject.for_select(:specialization => @student.specialization) %>
  <%= render(:partial => 'language', :collection => session[:language_subjects],
    :locals => {:subjects => language_buff}) %>
  <input type='hidden' name='return' id='return-value' value='0'/>
</fieldset>
</ul>
<br/>
<%= submit_tag("<<< " + t(:message_1, :scope => [:view, :study_plans, :_language_form]), :class => 'button', :id => 'return_button', :onclick => "$('return-value').value = 1;$('return_button').value = '" + t(:message_2, :scope => [:view, :study_plans, :_language_form]) + "'") %>
<%= submit_tag(t(:message_3, :scope => [:view, :study_plans, :_language_form]) + " >>>", :class => 'button', :id => 'submit_button', :onclick =>"$('submit_button').value = '%s'" % t(:message_4, :scope => [:view, :study_plans, :_language_form])) %>
<% end %>

