<% if @flash['error'] %>
<div id='error'>
<ul>
  <li>
<%= @flash['error'] %>
  </li>
</ul>
</div>
<% end %>
<%= form_remote_with_loading(:action => 'save_language')%>	
<fieldset>
<legend><%= _("language subjects") %></legend>
<%= render(:partial => 'language', :collection => @plan_subjects, :locals => {:subjects =>
language_subject_ids}) %>
</fieldset>
<%= submit_tag(_("commit")) %>
<%= end_form_tag %>

