<%= form_remote_tag(:url => {:action => 'save_obligate'}, :loading =>
      visual_effect(:appear, 'loading'), :interactive => visual_effect(:fade,
      "loading"), :complete => evaluate_remote_response) %>	
<fieldset>
<%= hidden_field 'study_plan', 'index_id' %>
<legend><%= _("obligate subjects") %></legend>
<% for plan_subject in @plan_subjects do %>
<%= render_partial 'obligate_form', :plan_subject => plan_subject %>
<br/> 
<% end %>
</fieldset>
<%= submit_tag(_("next")) %>
<%= end_form_tag %>

