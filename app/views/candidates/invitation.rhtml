	<% if @session['user'] %>
	<%= link_to 'zpět', :action => 'list'%>
	<% unless @candidate.invited? %>
	<span id='mailLink'><%= link_to_remote 'odešli mail s pozvánkou', :update => 'mailLink', :url => {:action => 'invite_now', :id => @candidate.id} %></span>
	<% end %>
	<% end %>
