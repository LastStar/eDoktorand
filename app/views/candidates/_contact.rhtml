<%=t(:message_0, :scope => [:txt, :view, :candidates, :_contact, :rhtml])%>: <a href='mailto:<%= candidate.email %>'><%= candidate.email %></a><br /> 
<%=t(:message_1, :scope => [:txt, :view, :candidates, :_contact, :rhtml])%>: <%= candidate.phone %><br /> 
<%=t(:message_2, :scope => [:txt, :view, :candidates, :_contact, :rhtml])%>: <%= candidate.address %><br /> 
<% unless candidate.postal_street.empty? %>
<%=t(:message_3, :scope => [:txt, :view, :candidates, :_contact, :rhtml])%>: <%= candidate.postal_address %>
<% end %>
