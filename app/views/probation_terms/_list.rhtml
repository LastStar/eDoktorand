<% if flash[:errors] %>
<center>
  <h2><span class='red'><%= flash[:errors] %>.</span></h2>
</center>
<% end %>

<% for probation_term in @probation_terms  %>
<div class='links'>
  <%= link(@user, probation_term)  %>
</div>
<h5><%= probation_term.subject.label %></h5>
<ul class="bordered">
  <li><div class='longinfo'> <%= t(:message_0, :scope => [:view, :probation_terms, :_list]) %>:&nbsp;
    <%= probation_term.enrolled_ratio %></div>
  <div class='longinfo'><%=t(:message_1, :scope => [:view, :probation_terms, :_list])%>: <%= probation_term.room %></div>
  <div class='longinfo'><%=t(:message_2, :scope => [:view, :probation_terms, :_list])%>: <%= probation_term.start_time %></div>
  <%=t(:message_3, :scope => [:view, :probation_terms, :_list])%>: <%= probation_term.date.strftime("%d. %m. %Y") %></li>
  <li><%= t(:message_4, :scope => [:view, :probation_terms, :_list]) %>:
  &nbsp;<%= probation_term.first_examinator.display_name_with_title %></li>
<% if probation_term.second_examinator %>
  <li><%= t(:message_5, :scope => [:view, :probation_terms, :_list]) %>:
  &nbsp;<%= probation_term.second_examinator.display_name_with_title %></li>
<% end %>
<% unless probation_term.empty_note? %>
  <li><%= t(:message_6, :scope => [:view, :probation_terms, :_list]) %>:&nbsp;<%= probation_term.note %></li>
<% end %>
  <li class='detail' id='info_<%= probation_term.id %>' style="display: none">
  </li>
</ul>
<% end %>
