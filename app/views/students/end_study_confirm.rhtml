<h1><%= t(:message_1, :scope => [:view, :students, :end_study_confirm]) %></h1>
<div id='student_detail'>
<ul class='details bordered'>
  <li>
    <div class='long_info'><%=@student.display_name%></div> <%= t(:message_2, :scope => [:view, :students, :end_study_confirm]) %>:
  </li>
  <li>
    <div class='long_info'><%=@student.index.year%></div> <%= t(:message_3, :scope => [:view, :students, :end_study_confirm]) %>:
  </li>
  <li>
    <div class='long_info'><%=@student.specialization.name%></div>  <%= t(:message_4, :scope => [:view, :students, :end_study_confirm]) %>:
  </li>
  <li>
    <div class='long_info'><%=@student.index.tutor.display_name%></div> <%= t(:message_5, :scope => [:view, :students, :end_study_confirm]) %>:
  </li>
  <li>
    <div class='long_info'><%= Date.today.strftime("%d. %m. %Y") %></div> <%= t(:message_6, :scope => [:view, :students, :end_study_confirm]) %>:
  </li>
  <li>
    <%= t(:message_7, :scope => [:view, :students, :end_study_confirm]) %>:
  </li>
  <li class='second'>
  <%=h @end_study_subject %>
  </li>
</ul>
</div>
