<ul class='peopleList'>
<% for index in @indexes  %>
  <li>
  <div class='right'>
  <%= render_partial 'student_links', :student => index.student %>
  </div>
  <b><%= index.student.display_name %></b>
  <div>
  <% if index.study_plan %>
  <%= _("created on") + ': ' +
    index.study_plan.created_on.strftime('%m. %d. %Y')
  %><br/> 
  <% if index.study_plan.canceled? %>
  <%= _("canceled on") %>: <%=
    index.study_plan.canceled_on.strftime('%m. %d. %Y')
  %><br/> 
  <% end %>
  <% if index.study_plan.approved? %>
  <%= _("approved on") %>: <%=
    index.study_plan.approved_on.strftime('%m. %d. %Y')
  %><br/> 
  <% end %>
  <% end %>
  </div>
  <div class='detail' id='info<%= index.student.id %>' style="display: none">
  </div >
  <% if index.study_plan %>
  <div id='study_plan_<%= index.student.id %>' style='display: none'>
  <%= render_partial 'shared/study_plan', :study_plan =>
    index.study_plan %>
  </div>
  <% end %>
  </li>
<% end %>
</ul>

