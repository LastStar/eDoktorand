<li class="bordered">
<h3><%= actuality.label %></h3>
<div class="links">
  <%= link_to(t(:message_0, :scope => [:view, :actualities, :_actuality]), :action => 'show', :id => actuality) %>
  <%= link_to(t(:message_1, :scope => [:view, :actualities, :_actuality]), :action => 'edit', :id => actuality) %>
  <%= link_to(t(:message_2, :scope => [:view, :actualities, :_actuality]), { :action => 'destroy', :id => actuality }, :confirm => t(:message_3, :scope => [:view, :actualities, :_actuality])) %>
</div>
<p><%= actuality.content %></p>
</li>
