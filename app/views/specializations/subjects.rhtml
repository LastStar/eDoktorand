<h5><%= t(:message_0, :scope => [:txt, :view, :specializations, :subjects, :rhtml])%></h5>
<div class='links'>
  <%= link_to(t(:message_1, :scope => [:txt, :view, :specializations, :subjects, :rhtml]), {:action => 'index'}) %>
</div>
<table class='subjects_table' id='obligate_subjects_table'>
  <tbody id='obligate_subjects'>
  <tr>
    <td>
      <h6><%= @specialization.name %></h6>
    </td>
  </tr>
  <tr>
    <td>
      &nbsp;&nbsp;&nbsp;&nbsp;<b><%= t(:message_2, :scope => [:txt, :view, :specializations, :subjects, :rhtml]) %>:</b>
    </td>
  </tr>
  <tr class='second'>
    <td>
       &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;<%= add_link(@specialization, 'ObligateSubject') %>
    </td>
  </tr>
  <% for specialization_subject in @obligate_subjects %>
    <%= render :partial => 'specialization_subject', :locals => {:specialization_subject => specialization_subject} %> 
  <% end %>
  </tbody>
  </table>

<table class='subjects_table' id='voluntary_subjects_table'>
  <tbody id='voluntary_subjects'>
    <tr>
      <td>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <b><%=t(:message_3, :scope => [:txt, :view, :specializations, :subjects, :rhtml])%>:</b>
      </td>
    </tr>
    <tr class='second'>
      <td>
        &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;
        <%= add_link(@specialization, 'VoluntarySubject') %>
      </td>
    </tr>
  <% for specialization_subject in @voluntary_subjects %>
    <%= render :partial => 'specialization_subject', :locals => {:specialization_subject => specialization_subject} %> 
  <%end%>
    <div id='add_voluntary'>
    </div>
  </tbody>
</table>
